{

  "manifest_version": 2,
  "name": "screen-cracker",
  "version": "1.0",

  "description": "Crack's Your Screen's Browser!",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/beastify",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/icon-96.png",
    "default_title": "screen-cracker",
    "default_popup": "popup/crack_screen.html"
  },

  "web_accessible_resources": [
    "img/scren_crack_1.png",
    "img/screen_crack_2.jpg"
  ]

}